<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:scrollbarThumbHorizontal="@color/loginButtonText"
    android:scrollbarThumbVertical="@color/loginButtonText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/bellerose"
            android:gravity="center"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="STAFF LOGIN"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="#ffffff" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/bellerose"
            android:hint="Staff User"
            android:singleLine="true"
            android:textColor="@color/loginButtonText"
            android:textColorHighlight="@color/loginButtonText"
            android:textColorHint="@color/loginButtonText"
            android:textColorLink="@color/loginButtonText" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/bellerose"
            android:hint="Staff Password"
            android:singleLine="true"
            android:inputType="textPassword"
            android:scrollbarThumbHorizontal="@color/loginButtonText"
            android:scrollbarThumbVertical="@color/loginButtonText"
            android:textColor="@color/loginButtonText"
            android:textColorHighlight="@color/loginButtonText"
            android:textColorHint="@color/loginButtonText"
            android:textColorLink="@color/loginButtonText"
            android:textCursorDrawable="@color/loginButtonText" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:background="@color/loginButtonText"
            android:fontFamily="@font/bellerose"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@android:color/white"
            android:textColorHighlight="#000000"
            android:textColorLink="#000000"
            android:textCursorDrawable="@color/loginButtonText" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:background="@color/loginButtonText"
            android:fontFamily="@font/bellerose"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@android:color/white" />


    </LinearLayout>

</LinearLayout>
